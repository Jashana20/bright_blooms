<!DOCTYPE html>
<html>
  <head>
    <title>BrightBlooms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> 
  </head>

  <body>
    <% if flash[:notice] %>
      <h3><%= flash[:notice]%></h3>
    <% end %>
    <% if current_user %>
      <h2>Hi, <%= current_user.username %>!</h2>
      <%= link_to "Logout", sessions_path %>
    <% else %>
      <%= link_to "Login", new_login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
